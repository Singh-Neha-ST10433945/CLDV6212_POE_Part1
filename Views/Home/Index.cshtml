@{
    ViewData["Title"] = "ABC Retail – Dashboard";
}

<!-- Hero banner -->
<div class="hero">
    <div>
        <h1>Welcome to ABC Retail</h1>
        <p>Manage customers, products, orders, and documents in one place.</p>
    </div>
</div>

<!-- Feature cards -->
<div class="row g-4">

    <!-- Customer Profiles -->
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 text-center p-3">
            <img src="/img/customers.jpg" alt="Customer Profiles" class="card-thumb" loading="lazy">
            <h5 class="mt-2">Customer Profiles</h5>
            <p>Store and view customer profiles.</p>
            <a href="/Table" class="btn btn-primary w-100">Open</a>
        </div>
    </div>

    <!-- Product Gallery -->
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 text-center p-3">
            <img src="/img/products.jpg" alt="Product Gallery" class="card-thumb" loading="lazy">
            <h5 class="mt-2">Product Gallery</h5>
            <p>Upload and store product images.</p>
            <a href="/Blob" class="btn btn-primary w-100">Open</a>
        </div>
    </div>

    <!-- Order Tracking -->
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 text-center p-3">
            <img src="/img/orders.jpg" alt="Order Tracking" class="card-thumb" loading="lazy">
            <h5 class="mt-2">Order Tracking</h5>
            <p>Track order and inventory updates.</p>
            <a href="/Queue" class="btn btn-primary w-100">Open</a>
        </div>
    </div>

    <!-- Contracts & Documents -->
    <div class="col-md-6 col-lg-3">
        <div class="card shadow-sm h-100 text-center p-3">
            <img src="/img/contracts.jpg" alt="Contracts & Documents" class="card-thumb" loading="lazy">
            <h5 class="mt-2">Contracts &amp; Documents</h5>
            <p>Store and manage business contracts.</p>
            <a href="/Files" class="btn btn-primary w-100">Open</a>
        </div>
    </div>

</div>
