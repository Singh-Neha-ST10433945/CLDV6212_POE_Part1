@model IEnumerable<string>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card shadow-sm mb-4">
    <div class="card-header fw-bold">Upload Image (Product Gallery)</div>
    <div class="card-body">
        <form asp-action="Upload" method="post" enctype="multipart/form-data" class="row g-2">
            <div class="col-md-6">
                <input class="form-control" type="file" name="file" required />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary" type="submit">Upload</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header fw-bold">Product Gallery</div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr><th>Name</th><th style="width:220px">Actions</th></tr>
            </thead>
            <tbody>
                @foreach (var name in Model)
                {
                    <tr>
                        <td>@name</td>
                        <td>
                            <a asp-action="Rename" asp-route-name="@name" class="btn btn-sm btn-outline-secondary me-1">Rename</a>
                            <form asp-action="Delete" asp-route-name="@name" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Delete @name ?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
